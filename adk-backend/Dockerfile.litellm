# LiteLLM Proxy Dockerfile
FROM ghcr.io/berriai/litellm:main-latest

# Create non-root user
RUN adduser --disabled-password --gecos '' litellm

# Copy configuration
COPY --chown=litellm:litellm litellm_config.yaml /app/config.yaml

# Switch to non-root user
USER litellm
WORKDIR /app

# Expose LiteLLM port
EXPOSE 4000

# Command to run LiteLLM proxy
CMD ["--config", "/app/config.yaml", "--port", "4000", "--host", "0.0.0.0"]
